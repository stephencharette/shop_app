<!DOCTYPE html>
<html>
  <head>
    <title>ShopApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://rsms.me/inter/inter.css">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="https://unpkg.com/@themesberg/flowbite@latest/dist/flowbite.bundle.js"></script>
  </head>

  <body>
    <%= render partial: 'layouts/admin' if signed_in? && current_user.is_admin? %>
    <%= render partial: 'layouts/notice' unless current_page_is_auth_path? unless current_user.is_admin? %>
    <%= render partial: 'layouts/header' unless current_page_is_auth_path? %>
    <%= render partial: 'layouts/navigation' unless current_page_is_auth_path? %>

    
    <% if current_page_is_auth_path? %>
      <%= yield %>
    <% else %>
      <div class="mx-20 my-10">
        <p id="notice" class=''></p>
        <% if notice %>
        <div class="bg-teal-100 border-t-4 mb-5 border-teal-500 rounded-b text-gray-700 px-4 py-2 shadow-md" role="alert">
          <div class="flex items-center">
            <div class="py-1"><%= heroicon "information-circle", variant: :outline, options: { class: 'h-6 w-6 text-teal-500 mr-3' } %></div>
            <div>
              <p class="font-medium"><%= notice %></p>
            </div>
          </div>
        </div>
        <% end %>
        <%= yield %>
      </div>
    <% end %>

  </body>
</html>
